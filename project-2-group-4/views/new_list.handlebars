<header id="masthead">
    <div class="container">
        <a href="index.html" id="logo">
            <img src="../public/images/logo.png">
        </a>
        <nav>
            <ul class="nav justify-content-end">
                <p>Welcome {{uname}}</p>
                <li class="nav-item">
                    <a class="nav-link" href="#">Create a new list</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">View your lists</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<div class="card">
    <h5 class="card-header">Create a new Wishlist</h5>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="listName">Name of Wishlist</label>
                <input type="text" class="form-control" id="wishlist" aria-describedby="usernameHelp">
            </div>
            <div class="form-group">
                <label for="item">Item</label>
                <input type="input" class="form-control" id="item" placeholder="Add an item">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>