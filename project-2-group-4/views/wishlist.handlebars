<header id="masthead">
    <div class="container">
        <a href="/" id="logo">
            <img src="../public/images/logo.png">
        </a>
        <div id="metadata" data="{{wishlist.id}}"></div>
        <nav>
            <ul class="nav justify-content-end">
                <p> {{wishlist._name}}</p><hr>
                <p>created by: {{creatorName}}</p><hr>
                <li class="nav-item">
                    <a class="nav-link" href="#">Search for members</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Create a new list</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">View your lists</a>
                </li>
            </ul>
        </nav>
    </div>
</header>

<div id="list">
    <div>
        <h3>unchecked</h3>
        {{#each items}} {{#unless checked}} {{>lists-block checked=false}} {{/unless}} {{/each}}
    </div>
    <div>
        <h3>checked</h3>
        {{#each items}} {{#if checked}} {{>lists-block checked=true}} {{/if}} {{/each}}
    </div>
    <br>
    <hr>
    <br>
    <input id="input-item" type="text">
    </input>
    <br><br>
    <button id="submitItem">Submit</button>
</div>

<div id="comments">
    <div>
        <h3>comments</h3>
        {{#each comments}} {{>comments-block}} {{/each}}
    </div>

<input id="input-comment" type="text">
</input>
<br><br>
<button id="submitComment">Submit</button>

</div>

